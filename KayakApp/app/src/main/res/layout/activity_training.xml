<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pablo.kayakapp.training.Training">


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/s0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiempo"
            android:textAlignment="center"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/Timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="00:00:00:000"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="45dp"/>

        <TextView
            android:id="@+id/Sep1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp">
        </TextView>

    <LinearLayout
        android:id="@+id/layoutS1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <TextView
            android:id="@+id/s1a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Velocidad"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/s1b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paladas"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="25dp" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2"
            >



                <TextView
                    android:id="@+id/Velocity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:scrollbars="none"
                    android:text="*"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/Strokes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:scrollbars="none"
                    android:text="*"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="40dp" />

        </LinearLayout>


            <TextView
                android:id="@+id/Sep2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"></TextView>


            <LinearLayout
                android:id="@+id/layoutS2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/s2a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Distancia"
                    android:textAlignment="center"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/s2b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Serie"
                    android:textAlignment="center"
                    android:textSize="25dp" />

            </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">

                <TextView
                    android:id="@+id/DistanceT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:scrollbars="none"
                    android:text="*"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="40dp" />

                <TextView
                    android:id="@+id/Info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:scrollbars="none"
                    android:text="*"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="40dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/Sep3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp">
        </TextView>



        <TextView
            android:id="@+id/s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiempo Restante"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TimerFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:scrollbars="none"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/s4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="20dp" />



        <LinearLayout
            android:id="@+id/menuLinearLayoutBtns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/midTableLayout"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <Button
                android:id="@+id/BtnPlay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_green_light"
                android:text="Play"
                android:textSize="25dp"
                />

            <Button
                android:id="@+id/BtnPause"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_light"
                android:text="Pause"
                android:textSize="25dp" />

            <Button
                android:id="@+id/BtnStop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:text="Stop"
                android:textSize="25dp" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
